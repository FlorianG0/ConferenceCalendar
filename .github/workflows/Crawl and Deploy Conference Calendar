name: Crawl and Deploy Conference Calendar

on:
  schedule:
    - cron: "0 6,18 * * *"
  workflow_dispatch:

jobs:
  crawl:
    runs-on: ubuntu-latest
    permissions:
      contents: write
    steps:
      - name: Checkout
        uses: actions/checkout@v4

      - name: Setup Python
        uses: actions/setup-python@v5
        with:
          python-version: "3.12"

      - name: Install dependencies
        run: pip install -r requirements.txt

      - name: Crawl deadline pages
        run: python scripts/crawl_deadlines.py

      - name: Commit crawler updates
        run: |
          git config user.name "github-actions[bot]"
          git config user.email "41898282+github-actions[bot]@users.noreply.github.com"
          git add data/conferences.json data/deadline_history.json
          git diff --cached --quiet || git commit -m "chore: update conference deadlines"
          git push

  deploy:
    needs: crawl
    runs-on: ubuntu-latest
    permissions:
      pages: write
      id-token: write
      contents: read
    environment:
      name: github-pages
      url: ${{ steps.deployment.outputs.page_url }}
    steps:
      - name: Checkout
        uses: actions/checkout@v4

      - name: Build Pages artifact
        run: |
          mkdir -p dist/data
          cp site/index.html dist/index.html
          cp data/conferences.json dist/data/conferences.json

      - name: Setup Pages
        uses: actions/configure-pages@v5

      - name: Upload Pages artifact
        uses: actions/upload-pages-artifact@v3
        with:
          path: dist

      - name: Deploy to GitHub Pages
        id: deployment
        uses: actions/deploy-pages@v4
